{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "files": [
        "twin.d.ts"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.js",
        "**/**/*.js",
        "**/**/*.jsx",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ]
}